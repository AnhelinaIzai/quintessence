<div class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>Courses</h1>
<%= link_to 'New Course', new_course_path %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><p><%= course.title %></p></td>
        <td><p><%= course.description %></p></td>
        <td> <%= image_tag(course.avatar.url,size:"200x200")  %> </td>

    
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>