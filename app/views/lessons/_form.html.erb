<%= form_with(model: lesson, local: true, url: course_lessons_path) do |form| %>
<%= form.hidden_field :course_id, value: @course.id %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :desc %>
    <%= form.text_field :desc %>
  </div>


  <div class="actions">
    <%= form.submit%>
  </div>
<% end %>
